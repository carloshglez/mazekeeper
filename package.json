{
  "name": "com.carloshglez.maze",
  "displayName": "Maze Keeper",
  "version": "1.0.0",
  "description": "Implementation of a maze game using agile development tools for Web and Mobile.",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf www/js/bundle.js",
    "build-dev": "npm run clean && SET NODE_ENV=develop & webpack --config webpack.config.js",
    "build-prod": "npm run clean && SET NODE_ENV=production & webpack --config webpack.config.prod.js",
    "build-apk": "cordova build android",
    "start": "./node_modules/.bin/webpack-dev-server",
    "lint": "eslint src",
    "lint-report": "./node_modules/.bin/eslint -f html src > lint-report.html"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Carlos Gonzalez",
  "license": "ISC",
  "dependencies": {
    "cordova-android": "^7.1.0",
    "cordova-custom-config": "^5.0.2",
    "cordova-plugin-whitelist": "^1.3.3",
    "iscroll": "^5.2.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-icons": "^2.2.7",
    "react-progressbar": "^15.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-custom-config": {}
    },
    "platforms": [
      "android"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.8.2",
    "file-loader": "^1.1.11",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "1.6.0",
    "rimraf": "^2.6.2",
    "source-map": "^0.7.3",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4"
  }
}